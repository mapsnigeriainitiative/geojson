    <div id="map" style="width: 900px; height: 900px"></div>

   
    <script>
        var map = L.map('map').setView([4.5, 2.9], 5);
        mapLink = 
            '<a href="http://openstreetmap.org">OpenStreetMap</a>,'+'<a href="http://mapsnigeriainitiative.wordpress.com">mapsNI</a>';
        L.tileLayer(
            'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; ' + mapLink,
            maxZoom: 18,
            }).addTo(map);

 function onEachFeature(feature, layer){
  if(feature.properties&&feature.properties.name&&feature.properties.population){
layer.bindPopup(feature.properties.name + '<br>' + feature.properties.population);}}
        
        L.Control.FileLayerLoad.LABEL = '<i class="fa fa-folder-open"></i>';
       L.Control.fileLayerLoad({
       layerOptions: {onEachFeature,
         fileSizeLimit: 1024}
        }).addTo(map);

    </script>
